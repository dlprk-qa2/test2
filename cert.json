{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]"
      },
      "appName": {
        "type": "string",
        "defaultValue": "sjnoncompliantwebapp"
      },
      "appServiceName": {
        "type": "string",
        "defaultValue": "sj-noncompliant-websitesfarm"
      }
    },
    "resources": [
      {
        "type": "Microsoft.Web/sites",
        "apiVersion": "2022-03-01",
        "name": "[parameters('appName')]",
        "location": "[parameters('location')]",
        "properties": {
          "clientAffinityEnabled": true,
          "clientCertEnabled": false,
          "clientCertMode": "Ignore",
          "enabled": true,
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServiceName'))]"
        },
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverfarms', parameters('appServiceName'))]"
        ]
      },
      {
        "type": "Microsoft.Web/serverfarms",
        "apiVersion": "2022-03-01",
        "name": "[parameters('appServiceName')]",
        "location": "[parameters('location')]",
        "sku": {
          "tier": "Basic",
          "name": "B1"
        }
      }
    ]
  }